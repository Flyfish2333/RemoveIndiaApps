<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/layer_bg_title"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:src="@drawable/img_broom" />

            <ImageView
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:rotation="270"
                android:src="@drawable/img_broom" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="40dp"
                android:src="@drawable/layer_bg_india" />

            <ImageView
                android:id="@+id/main_img_1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="40dp"
                android:padding="25dp"
                android:src="@drawable/img_india" />

            <ImageView
                android:id="@+id/main_img_2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="40dp"
                android:padding="30dp"
                android:src="@drawable/img_check"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="卸载印度应用"
            android:textColor="@android:color/white"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:gravity="center_horizontal"
            android:text="扫描并卸载您手机上的印度应用"
            android:textSize="18sp" />

        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/main_button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/shape_bg_button"
            android:gravity="center"
            android:paddingStart="50dp"
            android:paddingTop="10dp"
            android:paddingEnd="50dp"
            android:paddingBottom="10dp"
            android:text="立即扫描"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            app:initialCornerAngle="40dp"
            app:finalCornerAngle="40dp"
            app:spinning_bar_color="@android:color/white"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="\@luern0313"/>

    </LinearLayout>


</LinearLayout>